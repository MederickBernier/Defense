{
  "name": "mederickbernier/defense",
  "description": "Defensive toolkit for PHP backends: guards, result, retry, idempotency, problem+json, PDO helpers, request-id.",
  "type": "library",
  "license": "MIT",
  "keywords": ["defensive","guard","retry","idempotency","problem+json","pdo","psr-3","psr-7","psr-15"],
  "authors": [
    { "name": "Mederick Bernier", "email": "mederick.bernier@hotmail.ca" }
  ],
  "require": {
    "php": "^8.2",
    "psr/log": "^3.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "Mede\\Defense\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4 || ^12.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.59"
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "stan": "phpstan analyse --no-progress",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "qa": [
      "@cs-fix",
      "@cs-check",
      "@stan",
      "@test"
    ]
  },
  "suggest": {
    "firebase/php-jwt": "Implement Mede\\Defense\\Security\\Jwt adapter in your app"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/MederickBernier/Defense/issues",
    "source": "https://github.com/MederickBernier/Defense"
  }
}
